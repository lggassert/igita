#!/usr/bin/env python
import cmd
import os

class Igita(cmd.Cmd):
    prompt = "igita >> "
    
    def cmd(self, cmd, line):
        os.system("%s %s" % (cmd, line))
    
    def default(self, line):
        self.cmd('git', line)
        
    def do_git(self, line):
        self.default(line)

    def do_ls(self, line):
        self.cmd('git status', line)
        
    def do_sys(self, line):
        self.cmd(line, "")
            
    def do_cd(self, line):
        if not line: line = "."
        os.chdir(line)
        print os.getcwd()
    
    def do_quit(self, line):
        quit()
    
    def do_q(self, line):
        self.do_quit(line)
        
if __name__ == '__main__':
    Igita().cmdloop()

